@model Course.WEB.Models.Entities.Topic
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = Model.Name;
}
<style type="text/css">
    A {
        color: #428bca;
    }

        A:visited {
            color: #428bca;
        }
</style>
<h2>@Model.Name</h2>
<div style="margin: 25px 100px 25px 10px;">
    <div style="margin: 10px;">@Model.Description</div>
    <div style="margin: 5px 10px;">
        <strong>Дисциплина - </strong>
        <a href="@Url.Action("ShowDiscipline", "Home", new { disciplineId = Model.Course.Discipline.Id }, null)">@Model.Course.Discipline.Name</a>
    </div>
    <div style="margin: 5px 10px;"><strong>Курс - </strong>
        <a href="@Url.Action("ShowCourse", "Home", new { courseId = Model.Course.Id }, null)">@Model.Course.Name</a>
    </div>
    <div style="margin: 5px 10px;"><strong>Найдено задач:</strong> @Model.Tasks.Count()</div>
</div>
@if (Model.Tasks.Count() == 0)
{
    <h3 style="margin: 10px; margin-bottom: 15px;">В этой теме ещё нет ни одной задачи</h3>
}
else
{
<div>
    @for (int i = 0; i < Model.Tasks.Count(); i++)
    {
        <div style ="background: #f7f3ef; margin: 10px; padding: 10px; margin-right: 100px">
            <div>
                <h4><a href="@Url.Action("SolveTask", "Home", new { taskId = Model.Tasks.ToList()[i].Id }, null)">
                    @(i + 1). @Model.Tasks.ToList()[i].Name</a>
                @if (Model.Tasks.ToList()[i].CreatorId == User.Identity.GetUserId() || User.IsInRole("superAdmin") )
                {
                    using (Html.BeginForm("RedactTask", "Home", FormMethod.Get, new
                    {
                        style = "display: inline-block; margin-right: 5px;"
                    }))
                    {
                        @Html.Hidden("taskId", Model.Tasks.ToList()[i].Id)
                        <button type="submit" class="btn btn-default btn-mine"
                                style="padding: 0px 7px;">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true" 
                                  style="font-size: 20px;"></span>
                        </button>
                    }
                    using (Html.BeginForm("DeleteTask", "Home", new { taskId = Model.Tasks.ToList()[i].Id }, FormMethod.Post, new
                    {
                        style = "display: inline-block;right: 215px; position: absolute; margin-top: -10px; "
                    }))
                    {
                        <button type="submit" class="btn btn-default btn-mine"
                                style="padding: 0px 7px;">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"
                                  style="font-size: 20px;"></span>
                        </button>
                    }
                }</h4>
            </div>
            <div>
                @Model.Tasks.ToList()[i].Condition
            </div>
            <div>
                Средняя сложность: @Model.Tasks.ToList()[i].AverageComplexity
            </div>
            <div>
                Среднее время решения: @Model.Tasks.ToList()[i].AverageTime
            </div>
            @if (Model.Tasks.ToList()[i].Creator != null)
            {
                <span>Автор: </span> 
                @Html.ActionLink(Model.Tasks.ToList()[i].Creator.LastName + " " + Model.Tasks.ToList()[i].Creator.FirstName,
                "Index", "Manage", new { user_id = Model.Tasks.ToList()[i].Creator.Id }, null)
            }
         </div>
    }
</div>
}
@if (User.IsInRole("admin") || User.IsInRole("superAdmin"))
{
using (Html.BeginForm("CreateTask", "Home", FormMethod.Get, new
{
    style = "display: inline-block; margin-left: 10px;"
}))
{
    @Html.Hidden("topicId", Model.Id)
    <button type="submit" class="btn btn-default btn-mine"
            style="">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"
              style="font-size: 20px;"></span> Добавить задачу в тему
    </button>
}
}