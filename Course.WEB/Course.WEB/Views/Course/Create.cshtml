@model Course.WEB.Models.Entities.Course
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Создание курса для дисциплины - " + ViewBag.Discipline;
}

<h2>@ViewBag.Title</h2>


<div id="infaCreate">
    @using (Html.BeginForm("Create", "Course", FormMethod.Post, new { style = "" }))
            {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.Hidden("CreatorId", User.Identity.GetUserId())
        <input name="DisciplineId" type="hidden" value="@ViewBag.DisciplineId">
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name, new
       {
           htmlAttributes = new { @class = "form-control", placeholder = "Курс..." },
       })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description)
            @Html.TextAreaFor(model => model.Description, 5, 50, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <br />
        <div>
            <button type="submit" class="btn btn-default btn-mine">
                <span class="fi-save" style="font-size: 18px;"> Сохранить </span>
            </button>
            <button type="button" class="btn btn-default btn-mine">
                <span class="fi-x" style="font-size: 18px;">
                    @Html.ActionLink("Отмена", "Get", "Discipline", new { disciplineId = ViewBag.DisciplineId }, new
                   {
                       style = "color: #333333; text-decoration: none; "
                   })
                </span>
            </button>
        </div>
    }
</div>
